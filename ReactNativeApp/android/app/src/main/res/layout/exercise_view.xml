<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.views.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    </com.views.AutoFitTextureView>

    <com.views.OverlayView
        android:id="@+id/tracking_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:id="@+id/cameraParentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@color/colorBlack"
            android:text="Stop"
            android:textColor="#FFFF00"
            android:visibility="visible" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_toEndOf="@id/stopButton"
            android:background="@color/colorBlack"
            android:text="Restart"
            android:textColor="#FFFF00"
            android:visibility="gone" />

        <View
            android:id="@+id/score_timer_bg"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_90"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_60"
            android:background="@drawable/score_timer_oval_bg"
            android:visibility="invisible" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lavContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_drawOnVideoSnapshot="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/endOfExerciseContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_drawOnVideoSnapshot="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_drawOnVideoSnapshot="true">

            <TextView
                android:id="@+id/scoreTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_40"
                android:fontFamily="@font/poppins_black"
                android:textColor="#FFFF00"
                android:textSize="@dimen/dimen_50"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/centerView"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                tools:text="20" />

            <View
                android:id="@+id/centerView"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tryAgain"
                android:layout_width="@dimen/dimen_240"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_50"
                android:background="@drawable/score_round_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tryAGain"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/centerView" />

            <Button
                android:id="@+id/share"
                android:layout_width="@dimen/dimen_240"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="@drawable/share_round_bg"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/share"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tryAgain" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_130"
        android:layout_height="@dimen/dimen_250">

        <TextView
            android:id="@+id/pointsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monospec_medium"
            android:text="00"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_50"
            android:textStyle="bold"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/streakContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:id="@+id/streakCount"
            android:includeFontPadding="false"
            android:textColor="#FFFF00"
            android:textSize="@dimen/text_size_20sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>

