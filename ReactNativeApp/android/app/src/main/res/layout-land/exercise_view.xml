<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.views.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

    </com.views.AutoFitTextureView>

    <com.views.OverlayView
        android:id="@+id/tracking_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:id="@+id/cameraParentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@color/colorBlack"
            android:text="Stop"
            android:textColor="@color/jogo"
            android:visibility="visible" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_toEndOf="@id/stopButton"
            android:background="@color/colorBlack"
            android:text="Restart"
            android:textColor="@color/jogo"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lavContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_drawOnVideoSnapshot="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/endOfExerciseContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_drawOnVideoSnapshot="true">

        <TextView
            android:id="@+id/scoreTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_22"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_20sp"
            tools:text="20" />

        <Button
            android:id="@+id/tryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginEnd="@dimen/dimen_12"
            android:layout_marginBottom="@dimen/dimen_12"
            android:background="@color/colorBlack"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:text="@string/tryAGain"
            android:textColor="@color/jogo" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_130"
        android:layout_height="@dimen/dimen_250">

        <TextView
            android:id="@+id/pointsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monospec_medium"
            android:text="00"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_50"
            android:textStyle="bold"
            android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>

